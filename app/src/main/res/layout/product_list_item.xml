<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_marginTop="12dp"
    android:layout_height="150dp">

    
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:padding="12dp"
        android:background="@drawable/product_item_image_bg"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/product_item_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/product_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/product_item_text_bg"
        android:layout_toRightOf="@id/frame_layout"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/product_item_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="#000"
            android:text="product name"
            android:layout_marginLeft="12dp"/>


        <TextView
            android:id="@+id/product_item_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:text="# product code"
            android:layout_marginLeft="12dp"/>


    </LinearLayout>
    
    
    
</RelativeLayout>